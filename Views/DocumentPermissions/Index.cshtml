@model IEnumerable<Projekt_Zaliczeniowy_PZ.Models.DocumentPermission>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<form method="get" asp-action="Index" class="mb-3">
    <label class="form-label">Wybierz swój dokument:</label>
    <select class="form-select" name="documentId" asp-items="ViewBag.MyDocuments" onchange="this.form.submit()">
        <option value="">-- wybierz --</option>
    </select>
</form>

<p>
    @if (ViewBag.DocumentId != null)
    {
        <a asp-action="Create" asp-route-documentId="@ViewBag.DocumentId">Create New</a>
    }
    else
    {
        <span>Wybierz dokument z listy, aby zarządzać uprawnieniami.</span>
    }
</p>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
