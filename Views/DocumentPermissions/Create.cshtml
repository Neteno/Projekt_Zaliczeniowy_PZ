@model Projekt_Zaliczeniowy_PZ.Models.DocumentPermission

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj nowego użytkownika</h1>

<h4>DocumentPermission</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="DocumentId" />

            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control" asp-items="ViewBag.RoleList"></select>
                <span asp-validation-for="Role" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj nowego użytkownika" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do panelu z uprawienniami</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
