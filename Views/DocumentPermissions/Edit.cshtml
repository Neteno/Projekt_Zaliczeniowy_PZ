@model Projekt_Zaliczeniowy_PZ.Models.DocumentPermission

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DocumentPermission</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" action="/DocumentPermissions/Edit/@Model.Id">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />


            <div class="form-group">
                <label class="control-label">Użytkownik</label>
                <input class="form-control" value="@Model.User?.Email" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control" asp-items="ViewBag.RoleList"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" asp-route-documentId="@ViewData["DocumentId"]">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}