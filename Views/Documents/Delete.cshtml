@model Projekt_Zaliczeniowy_PZ.Models.Document

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń</h1>

<h3>Czy jesteś pewien że chcesz usunąć dokument? Nie ma możliwości odzyskania dokumentów!!</h3>
<div>
    <h4>Document</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Email autora
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedBy?.Email
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>
